@using System.Web.Routing


@{    
    RouteTable.Routes.Clear();

    RouteTable.Routes.Ignore("elmah.axd/{*pathInfo}");
    RouteTable.Routes.MapWebPageRoute("articles/category/{*category}", "~/TextPub/Articles.cshtml");
    RouteTable.Routes.MapWebPageRoute("articles/page/{page}", "~/TextPub/Articles.cshtml");
    RouteTable.Routes.MapWebPageRoute("articles", "~/TextPub/Articles.cshtml");
    RouteTable.Routes.MapWebPageRoute("articles/{*id}", "~/TextPub/Article.cshtml");

    RouteTable.Routes.MapWebPageRoute("{*pageId}", "~/TextPub/Page.cshtml");
}